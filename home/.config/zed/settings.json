// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "mode": "subtle"
  },
  "when_closing_with_no_tabs": "close_window",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "model_parameters": []
  },
  "minimap": {
    "show": "never"
  },
  "inlay_hints": {
    "enabled": true
  },
  "restore_on_startup": "none",
  "buffer_font_family": "IosevkaTerm Nerd Font Mono",
  "ui_font_family": "IosevkaTerm Nerd Font",
  "icon_theme": "Monospace Icon Theme - Dark",
  "vim_mode": true,
  "ui_font_size": 16.0,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "zedokai-darkest-machine"
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop"]
    },
    "Python": {
      "language_servers": ["pyright", "!basedpyright"]
    },
    "HTML/ERB": {
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"]
        }
      }
    }
  }
}
